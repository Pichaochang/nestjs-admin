{
  "language": "ts",
  "collection": "@nestjs/schematics",
  "entryFile": "./src/main",
  "sourceRoot": "src",
  "compilerOptions": {
    "tsConfigPath": "./tsconfig.build.json",
    "plugins": [
      "@nestjs/swagger/plugin"
    ],
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      }
    ]
  }
}
